@using PagedList
@using PagedList.Mvc
@model IEnumerable<WebMVCPhongMach.Models.tbl_Email>

@{
    ViewBag.Title = "Index";
   
   
}

<h2>Index</h2>
<link href="~/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.ActionLink("SendAll", "SendAll")
<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Email }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_Email }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Email })
                @Html.ActionLink("Send", "Send", new { id = item.ID_Email })
            </td>
        </tr>
    }

</table>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.12.0.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>